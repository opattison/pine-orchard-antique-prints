  line-height: 1.2;
}

h2 {
  font-size: em(28px);
  line-height: 1.2;
}

h3 {
  font-size: em(22px);
  line-height: 1.2;
}

h4 {
  font-size: em(20px);
  line-height: 1.3;
}

h5 {
  font-size: em(16px);
  line-height: 1.4;
}

h6 {
  font-size: em(14px);
  line-height: 1.4;
}


.h1 { @extend h1; }
.h2 { @extend h2; }
.h3 { @extend h3; }
.h4 { @extend h4; }
.h5 { @extend h5; }
.h6 { @extend h6; }

.small-cap {
  font-family: $serif;

