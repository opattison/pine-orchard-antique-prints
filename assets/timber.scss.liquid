  }

  &.right {
    justify-content: flex-end;
  }
}

/*================ Home to menu text and cart that toggle drawers ================*/
.site-nav--mobile {
  @include nav;

  font-size: em(20px);

  button {
    font-size: 1em; // reset
    font-weight: inherit;
  }

  @include at-query ($min, $small) {
    font-size: em(24px);
  }
}

.site-nav__link {
  display: block;
  text-decoration: none;
  padding: $gutter / 3 $gutter / 2;
  white-space: nowrap;
  color: $colorNavText;

  transition: color $transitionIn, background-color $transitionIn * 2;

  &:hover,
  &:active,
  &:focus,
  &.is-transitioned {
    background-color: #000; // enables background transparency with color blending
    color: $colorNav;
  }

  .icon-arrow-down {
    position: relative;
    top: -2px;
    font-size: 10px;
    padding-left: $gutter / 4;
  }

  .site-nav--active > & {
    border-bottom: solid 6px $colorNavText;
  }

  .site-nav--mobile & {
    display: inline-block;
  }
}

/*================ Dropdowns ================*/
.site-nav__dropdown {
  display: none;
  position: absolute;
  left: 0;
  margin: 0;
  z-index: $zindexNavDropdowns;

  .supports-no-touch .site-nav--has-dropdown:hover &,
  .site-nav--has-dropdown.nav-hover &,
  .nav-focus + & {
    display: block;
  }

  a {
    background-color: $colorNav;

    &:hover,
    &:active,
    &:focus {
      background-color: darken($colorNav, 10%);
    }
  }
}

/*================ Search bar in header ================*/
.nav-search {
  position: relative;
  padding: 10px 0;

  @include at-query ($max, $medium) {
    padding: 0 0 ($gutter / 2);
    margin: 0 auto;
    text-align: center;
  }
}

/*============================================================================
  #Mobile Nav
  - List of items inside the mobile drawer
==============================================================================*/
.mobile-nav {
  // Negative of .drawer left/right padding for full-width link tap area
  margin: (-$gutter / 2) (-$gutter / 2) 0 (-$gutter / 2);

  li {
    margin-bottom: 0;
  }
}

.mobile-nav__search {
  padding: $gutter / 2;

  .search-bar {
    margin-bottom: 0;
  }
}

.mobile-nav__item {
  position: relative;
  display: block;

  // Background color on top level items so there is no
  // element overlap on subnav's CSS toggle animation
  .mobile-nav > & {
    background-color: $colorDrawers;
  }

  &:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: $gutter / 2;
    right: $gutter / 2;
    border-bottom: 1px solid $colorDrawerBorder;
  }

  .mobile-nav > &:last-child:after {
    display: none;
  }
}

// Login/logout links can't have a class on them, so style <a> element
.mobile-nav__item a {
  display: block;
}

.mobile-nav__item a,
.mobile-nav__toggle button {
  color: $colorDrawerText;
  padding: $gutter / 2;
  text-decoration: none;

  &:hover,
  &:active,
  &:focus {
    color: darken($colorDrawerText, 15%);
  }

  &:active,
  &:focus {
    background-color: darken($colorDrawers, 5%);
  }
}

.mobile-nav__item--active {
  font-weight: $bodyFontBold;
}

.mobile-nav__has-sublist {
  display: table;
  width: 100%;

  .mobile-nav__link {
    display: table-cell;
    vertical-align: middle;
    width: 100%;
  }
}

.mobile-nav__toggle {
  display: table-cell;
  vertical-align: middle;
  width: 1%;
}

.mobile-nav__toggle-open {
  .mobile-nav--expanded & {
    display: none;
  }
}

.mobile-nav__toggle-close {
  display: none;

  .mobile-nav--expanded & {
    display: block;
  }
}

.mobile-nav__sublist {
  margin: 0;
  max-height: 0;
  visibility: hidden;
  overflow: hidden;
  transition: all 200ms cubic-bezier(0.57, 0.06, 0.05, 0.95);
  @include backface();

  .mobile-nav--expanded + & {
    visibility: visible;
    max-height: 700px;
    transition: all 400ms cubic-bezier(0.57, 0.06, 0.05, 0.95);
  }

  .mobile-nav__item:after {
    top: 0;
    bottom: auto;
  }

  .mobile-nav__link {
    padding-left: $gutter;
    font-weight: normal;
  }
}

.footer-nav {
  li {
    font-weight: $bodyFontDemi;
  }
}

/*============================================================================
  #Drawers
==============================================================================*/
.js-drawer-open {
  overflow: hidden;
  height: 100%;
}

.drawer {
  @include promote-layer();
  display: none;
  position: fixed;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  top: 0;
  bottom: 0;
  padding: 0 ($gutter / 2) ($gutter / 2);
  max-width: 95%;
  z-index: $zindexDrawer;
  color: $colorDrawerText;
  background-color: $colorDrawers;
  transition: $drawerTransition;

  a {
    color: $colorDrawerText;

    &:hover,
    &:focus {
      opacity: 0.7;
    }
  }

  input,
  textarea {
    border-color: $colorDrawerBorder;
  }
}

.drawer--left {
  width: $drawerNavWidth;
  left: -$drawerNavWidth;
  border-right: 1px solid $colorDrawerBorder;

  .js-drawer-open-left & {
    display: block;
    @include transform(translateX($drawerNavWidth));

    .lt-ie9 & {
      left: 0;
    }
  }
}

#PageContainer {
  overflow: hidden;
}

.is-moved-by-drawer {
  @include promote-layer();
  transition: $drawerTransition;

  .js-drawer-open-left & {
    @include transform(translateX($drawerNavWidth));
  }
}

.drawer__header {
  display: table;
  height: 70px;
  width: 100%;
  margin-bottom: $gutter / 2;
  border-bottom: 1px solid $colorDrawerBorder;
}

.drawer__title,
.drawer__close {
  display: table-cell;
  vertical-align: middle;
}

.drawer__title {
  width: 100%;
}

.drawer__close {
  width: 1%;
  text-align: center;
}

.drawer__close button {
  position: relative;
  height: auto;
  padding: 6px 14px;
  color: inherit;
  font-size: em(18px);

}

/*============================================================================
  #Site Footer
==============================================================================*/
.site-footer {
  background-color: $colorFooterBg;
  padding: $gutter 0;
  color: $colorFooterText;

  @include at-query ($min, $large) {
    padding: ($gutter * 2) 0;
  }
}

.site-footer__newsletter {
  @include at-query ($max, $small) {
    margin-top: $gutter;
  }
}

/*============================================================================
  #Product and Collection Grids
==============================================================================*/
.grid__link-block {
  display: block;
  margin: 0 auto ($gutter / 2);

  p {
    margin: ($gutter / 4) 0 0;
  }

  &:focus,
  &:focus * {
    color: $colorLinkHover;
    background-color: $colorBody;
  }
}

.grid__image {
  background-size: cover;
  background-position: center;
  height: 8em;
  margin-bottom: $gutter / 4;

  @include at-query ($min, $small) {
    height: 10em;
  }

  @include at-query ($min, $large) {
    height: 11em;
  }
}

.grid__price {
  font-weight: $bodyFontDemi;
}


.grid--list .grid__image {
  height: 8em;

  @include at-query ($min, $small) {
    height: 6em;
  }
}

.grid--list .grid__item {
  margin-bottom: ($gutter / 4);
}

.grid--collections {

  .grid__image {
    height: 9em;

    @include at-query ($min, $small) {
      height: 13em;
    }

    @include at-query ($min, $large) {
      height: 15em;
    }
  }

  .grid__link-block {
    margin-bottom: 0;
  }
}

.grid--collections__featuring {
  margin-bottom: $gutter;

  li {
    margin-bottom: 1em;
  }
}

/*============================================================================
  #Collection Filters
==============================================================================*/
.filter--active {
  font-weight: $bodyFontDemi;
}


/*============================================================================
  #Product Page
==============================================================================*/
.product-single__variants {
  display: none;

  .no-js & {
    display: block;
  }
}

.product-single__photos {
  margin-bottom: $gutter;

  a {
    cursor: zoom-in;
  }

  img {
    max-height: 480px;
  }
}

.product-single__photos,
.product-single__thumbnails {
  display: flex;
  align-items: center;

  a {
    max-width: 100%;
  }

  a,
  img {
    display: block;
    margin: 0 auto;
  }
}

.product-single__thumbnails {
  list-style: none;
  justify-content: space-around;
  margin: 0;
  padding: 0;

  a:focus {
    background-color: transparent;
    outline: solid 4px $colorLinkHover;
  }

  li {
    margin: 0 ($gutter / 2) ($gutter / 2);
    min-width: 0;
  }
}

.product__price {
  font-family: $bodyFontStack;
  font-size: em(24px);
  font-weight: $bodyFontDemi;
}

#ProductPrice {
  display: inline-block;
  margin: 14px 21px 14px 0;
  vertical-align: middle;
}

.product-description {
  margin-bottom: $gutter;
}


/*============================================================================
  #Notes and Form Feedback
==============================================================================*/
.note,
.errors {
  border-radius: $radius;
  padding: 6px 12px;
  margin-bottom: $gutter / 2;
  border: 1px solid transparent;
  font-size: 0.9em;
  text-align: left;

  ul,
  ol {
    margin-top: 0;
    margin-bottom: 0;
  }

  li:last-child {
    margin-bottom: 0;
  }

  p {
    margin-bottom: 0;
  }
}

.note {
  border-color: $colorBorder;
}

.errors {
  ul {
    list-style: disc outside;
    margin-left: 20px;
  }
}

.form-success {
  color: $successGreen;
  background-color: $successGreenBg;
  border-color: $successGreen;

  a {
    color: $colorTextBody;
    text-decoration: underline;

    &:hover {
      text-decoration: none;
    }
  }
}

.form-error,
.errors {
  color: $errorRed;
  background-color: $errorRedBg;
  border-color: $errorRed;

  a {
    color: $errorRed;
    text-decoration: underline;

    &:hover {
      text-decoration: none;
    }
  }
}


/*============================================================================
  #Cart Page
==============================================================================*/
.cart__row {
  position: relative;
  margin-top: $gutter;
  padding-top: $gutter;
  border-bottom: 1px solid $colorBorder;

  &:first-child {
    margin-top: 0;
  }

  &:first-child {
    padding-top: 0;
  }

  .js-qty {
    margin: 0 auto;
  }
}

.cart-table {
  th {
    font-weight: $bodyFontMedium;
  }

  td,
  th {
    padding: $gutter / 2 $gutter / 2 $gutter / 2 0;
    border: none;
    min-width: 6em;
  }

  td:last-child {
    padding-right: 0;
  }

  @include at-query ($max, $small) {
    td {
      padding-top: 0;
      padding-bottom: $gutter / 4;
    }
  }
}

@include at-query ($min, $large) {
  .cart__row--table-large {
    display: table;
    table-layout: fixed;
    width: 100%;

    .grid__item {
      display: table-cell;
      vertical-align: middle;
      float: none;
    }
  }
}

.cart__image {
  display: block;

  img {
    display: block;
    max-width: 100%;
  }
}

.cart__mini-labels {
  display: block;
  margin: ($gutter / 3) 0;
  font-size: em(12px);

  @include at-query ($min, $large) {
    display: none;
  }
}

.cart__item-price {
  font-weight: $bodyFontDemi;
}

.cart__remove {
  margin-top: ($gutter / 2);
}

label[for="discount"] {
  cursor: default;
  display: inline-block;
  margin-top: ($gutter / 2);
}

.continue {
  margin-top: ($gutter / 2);
}

.cart__subtotal-title {
  display: inline-block;
  font-weight: $bodyFontMedium;
}

.cart__subtotal {
  margin: ($gutter / 2) 0 ($gutter / 2) ($gutter / 4);
  display: inline-block;
  font-weight: $bodyFontDemi;
}

.cart__empty {
  font-size: em(20px);
  margin: ($gutter * 2) 0 $gutter;
}

/*============================================================================
  #Ajax Cart Styles (conditionally loaded)
==============================================================================*/
{% if settings.ajax_cart_enable %}

.ajaxcart__inner {
  margin-bottom: $gutter;
}

.ajaxcart__row {
  > .grid {
    margin-left: -$gutter / 2;

    > .grid__item {
      padding-left: $gutter / 2;
    }
  }
}

.ajaxcart__product {
  position: relative;
  max-height: 500px;

  &.is-removed {
    max-height: 0;
    overflow: hidden;
    visibility: hidden;
    transition: all 450ms cubic-bezier(0.57,.06,.05,.95);
    @include backface();
  }
}

.ajaxcart__row {
  padding-bottom: $gutter / 2;
  margin-bottom: $gutter / 2;
  border-bottom: 1px solid $colorDrawerBorder;
}

.ajaxcart__product-image {
  display: block;
  overflow: hidden;
  margin-bottom: 15px;

  img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
  }
}

.ajaxcart__product-name,
.ajaxcart__product-meta {
  display: block;
}

.ajaxcart__product-name + .ajaxcart__product-meta {
  padding-top: $gutter / 5;
}

/*================ Quantity Selectors ================*/
.js-qty {
  position: relative;
  margin-bottom: 1em;
  max-width: 100px;
  min-width: 75px;
  overflow: visible;

  input {
    display: block;
    background: none;
    text-align: center;
    width: 100%;
    padding: 5px 25px;
    margin: 0;
  }
}

.js-qty__adjust {
  cursor: pointer;
  position: absolute;
  display: block;
  top: 0;
  bottom: 0;
  border: 0 none;
  padding: 0 8px;
  background: none;
  text-align: center;
  overflow: hidden;
  @include user-select(none);

  &:hover,
  &:focus {
    color: $colorPrimary;
  }
}

.js-qty__adjust--plus {
  right: 0;
  border-left: 1px solid $colorBorder;
}

.js-qty__adjust--minus {
  left: 0;
  border-right: 1px solid $colorBorder;
}

/*================ Remove Selector in Ajax Cart ================*/

.ajaxcart__qty--remove {
  padding: 2px 8px;
  position: relative;
  min-height: 24px;
  font-size: em(12px);
}

{% endif %} // settings.ajax_cart_enable

/*============================================================================
  #Shop-specific Styles
==============================================================================*/

.box-container {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  margin: $gutter $gutter / -2;

  @include at-query ($min, $small) {
    margin-top: $gutter * 1.5;
    margin-bottom: $gutter * 1.5;
  }
}

.box {
  border-radius: $radius;
  flex: 0 0 calc(100% - #{$gutter});
  margin: $gutter / 2;
  padding: $gutter / 2 $gutter;
  width: calc(100% - #{$gutter});

  font-weight: $bodyFontRegular;
  font-size: em(16px);
  text-align: center;

  @include at-query ($min, $small) {
    flex-basis: calc(50% - #{$gutter});
    font-size: em(18px);
  }
}

.box--alert {
  @extend .box;
  background-color: $errorRedBg;
  border: 1px solid $errorRed;
  color: $errorRed;

  a {
    color: $colorTextBody;
    text-decoration: underline;

    &:hover,
    &:focus {
      background-color: $colorTextBody;
      color: $errorRedBg;
    }
  }
}

.box--promo {
  @extend .box;
  border: 1px solid $colorTextBody;

  strong {
    color: $colorBtnPrimary;
  }
}

.box--sale {
  @extend .box;
  border: 2px solid $colorBtnPrimary;
  padding: 1em 4em;
  margin: 2em auto;
  width: 100%;

  background-image: url({{ 'pattern-red-stripes.svg' | asset_url }});
  background-repeat: no-repeat;
  background-size: 4em;
  background-position: left top;

  h2,
  strong {
    color: $colorBtnPrimary;
  }

  p {
    text-align: left;
  }
}

.disclaimer {
  font-size: em(18px);
  text-align: center;

  @include at-query ($min, $small) {
    text-align: right;
  }
}

.credit {
  display: flex;
  align-items: baseline;
  font-size: .8em;
  justify-content: flex-end;
  margin-top: ($gutter * 2);

  a:focus,
  a:active {
    background-color: transparent;
  }

  @include at-query ($min, $small) {
    font-size: 1em;
  }
}

.credit__text {
  color: #397eac;
  font-weight: $bodyFontDemi;
  margin: 0 .25em;

  &:hover {
    color: #cc3d33;
  }
}

.credit__logo {
  height: 1.25em;
  width: 1.25em;
  align-self: flex-start;

  &:hover #layer12,
  &:focus #layer12 {
    fill: #397eac;
  }

  &:hover #layer6,
  &:focus #layer6 {
    fill: #bd1b0f;
  }

  &:hover #layer1,
  &:focus #layer1 {
    fill: #cc3d33;
  }
}
