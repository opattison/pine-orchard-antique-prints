/*============================================================================
  #Typography
==============================================================================*/
body,
input,
textarea,
button,
select {
  font-size: $baseFontSize;
  line-height: 1.4;
  font-family: $bodyFontStack;
  color: $colorTextBody;
  font-weight: $bodyFontRegular;
  -webkit-text-size-adjust: 100%;
}

h1, h2, h3, h4, h5, h6 {
  display: block;
  font-family: $headerFontStack;
  font-weight: $headerFontRegular;
  margin: 0 0 0.5em;
  @include liga;

  a {
    text-decoration: none;
    font-weight: inherit;
  }
}

h6 {
  font-family: $bodyFontStack;
}

/*================ Use em() Sass function to declare font-size ================*/
h1 {
